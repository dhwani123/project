<div class="container-fluid">
<div class="row-fluid">
<h1> Assignments</h1>
<% if cubeteacher_signed_in? %>
<%= link_to "New assignment", new_assignment_path, class: "btn btn-primary" %>
<% end %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th style="color:#fff;">Name</th>
      <th style="color:#fff;">Download Link</th>
      <th style="color:#fff;">Subject</th>
      <th style="color:#fff;">Uploaded on </th>
      <%if cubeteacher_signed_in? %><th style="color:#fff;"> Posted by</th><% end%>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  
    <% @assignments.each do |assignment| %>
      <tr>
        <td style="color:#fff;"><%= assignment.name %></td>
        <td ><%= link_to "#{assignment.name + "  "  + assignment.subject}",assignment.attachment_url %></td>
        <td style="color:#fff;"><%= assignment.subject %></td>
        <td style="color:#fff;"><%= assignment.created_at.strftime("%d- %m -%y") %><%if cubeteacher_signed_in? %>
        <td style="color:#fff;"><%= assignment.postedby %></td>

        <td><%= button_to "Delete",  assignment, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure that you wish to delete #{assignment.name}?"} %> 
        </td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>