k<div class="container">
  <div class="row">

    <div class="page-header">

      <h2> Log In</h2>

      <div class="form-horizontal">
       <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
       <fieldset><legend><h3>Have an Account? Sign In</h3></legend>
        <div class="form-group">
          <div class="col-md-12"><%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" , :class => "form-control input-xlarge"%></div>
        </div>
        <div class="form-group">
         <div class="col-md-12"><%= f.label :password%>
           <%= f.password_field :password , :placeholder => "Password", :class => "form-control input-xlarge"%></div>
        </div>
        <div>
           <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%> 
       </div>
        <div class="col-md-5"><%= f.submit "Sign in", :class => "btn btn-success " %></div>
          
   <div class="col-md-5"><%= render "devise/shared/links" %></div>
   <% end %></fieldset>
   </div>
   </div>
   </div>
</div>