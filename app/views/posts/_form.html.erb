<h1>New Question</h1><%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %></h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :rows => 10, :columns => 10 %>
  </div>
   <div class="field">
    <%= f.label :tag_list_tokens, "seperated by comma" %><br>
    <%= f.text_field :tag_list_tokens , data: {load: @post.tags.map{ |t| { id: t.name, name: t.name }}.to_json} %>
  </div>
   
 <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
  <script>
  $(function() {
  $('#post_tag_list_tokens').tokenInput('/posts/tag.json', {
    crossDomain: false,
    prePopulate: $('#post_tag_list_tokens').data('load'),
    theme: 'mac'
    });
});
  </script>
<% end %>