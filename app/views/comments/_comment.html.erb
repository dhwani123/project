
<%= div_for comment do |f| %>
<h4 class= "container"><%= comment.body %></h4>

<span class = "badge" align="right"><%= time_ago_in_words(comment.created_at) %> ago by <%= comment.postedby %></span>

<%= link_to "Upvote", like_post_comment_path(@post,comment), method: :put %>
<%= link_to "Downvote", dislike_post_comment_path(@post,comment), method: :put %>

<% end %>