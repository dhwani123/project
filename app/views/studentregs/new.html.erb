<h3><i><u>REGISTRATION FORM FOR STUDENTS</u></i></h3>
<%= form_for (@studentreg) do |f| %>
<%= f.label :firstname %>
<%= f.text_field :firstname %>
<%= f.label :middlename %>
<%= f.text_field :middlename %>
<%= f.label :lastname %>
<%= f.text_field :lastname %>
