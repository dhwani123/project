<div>
<%= f.label :mname %>
<%= f.text_field :mname %>
</div>
<div>
<%= f.label :mqualification %>
<%= f.text_field :mqualification %>
</div>
<div>
<%= f.label :moccupation %>
<%= f.text_field :moccupation %>
