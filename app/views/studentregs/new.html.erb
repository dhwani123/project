<%= f.text_field :fname %>
</div>
<div>
<%= f.label :fqualification %>
<%= f.text_field :fqualification %>
</div>
<div>
<%= f.label :foccupation %>
<%= f.text_field :foccupation %>
</div>
<div>
<%= f.label :fincome %>
<%= f.text_field :fincome %>
