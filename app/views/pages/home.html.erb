        <a class="btn btn-primary btn-lg" data-toggle="modal" data-target="#cubestudent" data-original-title>
          Sign In as Student
        </a>
        <a class="btn btn-primary btn-lg" data-toggle="modal" data-target="#cubeteacher" data-original-title>
          Sign In as Teacher
        </a>

        
        <div class="modal fade" id="cubestudent" tabindex="-1" role="dialog" aria-labelledby="contactLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="panel-title" id="contactLabel"><span class="glyphicon glyphicon-info-sign"></span> Sign In as Student</h4>
                    </div>
                    
                    <div class="modal-body" style="padding: 5px;">

                   <%= form_for(:cubestudent,:url => new_cubestudent_session_path) do |f| %>
                          Email:
                          <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" , :class => "form-control input-xlarge"%>
                          Password :
                          <%= f.password_field :password , :placeholder => "Password", :class => "form-control input-xlarge"%>
                          
                                 
                    </div>  
                        
                    <div class="panel-footer" style="margin-bottom:-14px;">
                            
                          <%= f.submit "Sign in", :class => "btn btn-success " %>
                                <!--<span class="glyphicon glyphicon-ok"></span>-->
                          
                          <%= link_to "Forgot Password", new_cubestudent_password_path, :class => "btn btn-info"%></div>

                    <% end %>
                                <!--<span class="glyphicon glyphicon-remove"></span>-->
                            <button style="float: right;" type="button" class="btn btn-default btn-close" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
            
        

        <!--teacher signin form -->
        <div class="modal fade" id="cubeteacher" tabindex="-1" role="dialog" aria-labelledby="contactLabel" aria-hidden="true">
            <div class="modal-dialog">
