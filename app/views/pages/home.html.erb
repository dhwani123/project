                    </div>
                    
                    <div class="modal-body" style="padding: 5px;">

                   <%= form_for(:cubeteacher,:url => new_cubeteacher_session_path) do |f| %>
                          <%= f.label :email %>
                          <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" , :class => "form-control input-xlarge"%>
                          <%= f.label :password%>
                          <%= f.password_field :password , :placeholder => "Password", :class => "form-control input-xlarge"%>
                                 
                    </div>  
                        
                    <div class="panel-footer" style="margin-bottom:-14px;">
                            
                          <%= f.submit "Sign in", :class => "btn btn-success " %>
                                <!--<span class="glyphicon glyphicon-ok"></span>-->
                          <%= link_to "Forgot Password", new_cubeteacher_password_path, :class => "btn btn-info" %></div>

